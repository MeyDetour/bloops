{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <div class="containerMade">

        {% if app.user %}
            <div class="profilSettingsContainer">
                {% if app.user.image %}
                    <img class="imgPdpSetting" src="{{ vich_uploader_asset(app.user.image) }}" alt="">
                {% else %}
                    <img class="imgPdpSetting" src="{{ asset('images/imgProfil.png') }}" alt="">
                {% endif %}
                <div class="informationsContainer">
                    <div class="informationProfil">
                        <div class="labelInformationProfil">
                            <i class="bi bi-person-lines-fill"></i>
                            <input type="text" id="inputUsernameProfil" readonly name="username"
                                   value="{{ app.user.username }}">
                            <input type="hidden" id="userIdProfil" readonly name="id" value="{{ app.user.id }}">
                        </div>

                        <div class="line"></div>
                    </div>

                    <div class="informationProfil">
                        <div class="labelInformationProfil">
                            <i class="bi bi-envelope"></i>
                            <span> {{ app.user.email }}</span>
                        </div>

                        <div class="line"></div>
                    </div>
                    <div class="informationProfil">
                        <button id="saveChanges" class="btn">Changer le nom d'utilisateur</button>
                        <button class="btn boutonHeader" id="updateProfil">Modifier le profil</button>
                        <a href="{{ path('app_logout') }}" class="btn boutonHeader">Se d√©connecter</a>
                        <a class="btn boutonHeader" href="{{ path('new_article') }}">Creer</a>
                        <a class="btn boutonHeader" href="{{ path('add_video') }}">ajouter une video</a>
                        <a class="btn boutonHeader" href="{{ path('add_audio') }}">ajouter un podcast</a>
                        <a class="btn boutonHeader" href="{{ path('new_article') }}">ajouter un article</a>
                        <a class="btn boutonHeader" href="{{ path('add_user_image') }}">ajouter une pdp</a>

                    </div>
                </div>

            </div>

        {% endif %}

    </div>
    {% if app.user %}
        <script src="{{ asset('js/changeUsername.js') }}" defer></script>
    {% endif %}
{% endblock %}
