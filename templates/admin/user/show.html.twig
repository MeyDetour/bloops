{% extends 'admin/base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}


    {{ user.id }}
    {{ user.username }}
    {{ user.email }}
    {{ user.isVerified }}
    {{ user.password }}
    {{ user.image }}
    {{ user.roles[0] }}

    {% for comment in user.comments %}
        {{ comment.id }}
        {{ comment.createdAt }}
        {{ comment.author }}
        {{ comment.content }}
    {% endfor %}



    {% for article in user.articles %}
        {{ article.id }}
        {{ article.createdAt }}
        {{ article.title }}
        {{ article.author }}
    {% endfor %}


    {{ user.likes|length }}


{% endblock %}
