{% extends 'base.html.twig' %}

{% block title %}Hello VideoController!{% endblock %}

{% block body %}
    <div class="containerMade">

        <div class="podcastContainer containerMade">

            {% for audio in audios %}
                <div class="audioAudio ">
                    <div class="dropdown">
                        <button class="btn audioOption " type="button" data-bs-toggle="dropdown">
                            <i class=" bi   bi-sliders"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item btn btn-primary" href="{{ path('delete_audio',{'id':audio.id}) }}">supprimer</a>
                            </li>
                            <li><a class="dropdown-item btn btn-primary"
                                   href="{{ path('edit_titleDescription',{'id': audio.id}) }}">Modifier le titre et la description</a></li>
                            <li><a class="dropdown-item btn btn-primary"
                                   href="{{ path('edit_audio',{'id': audio.id}) }}">Changer l'audio</a></li>


                        </ul>
                    </div>
                    <h2>{{ audio.titre }}</h2>
                    <span>{{ audio.description }}</span>

                    {% include 'audio.html.twig' with  {
                        'route_name':'',
                        'audioClass':'audio',
                        'audio':audio,
                        'param':null,
                        'aClass':''} %}
                </div>
            {% endfor %}
        </div>
    </div>





</div>
{% endblock %}
