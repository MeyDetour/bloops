<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% block stylesheets %}
        <link rel="icon" type="image/png/webp" href="{{ asset('images/logo.png') | imagine_filter('ma_vignette') }}"/>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
              crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/bouttons.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/client/style.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/client/bloop.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/client/index.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/client/profil.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/client/overlay.css') }}">

    {% endblock %}

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>
        {% block importmap %}
            {{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body  {{ stimulus_controller('overlay') }}  >
<div class="mainContainer ">
    {% include './component/navbar.html.twig' %}
    {% include './component/overlay.html.twig' %}
    <div class="contentContainer">
        {% block body %}{% endblock %}
    </div>
</div>


<script src="{{ asset('js/request.js') }}" defer></script>
</body>
</html>
