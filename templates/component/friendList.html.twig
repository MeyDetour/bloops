<div class="friendListContainer" {{ stimulus_target('mobil','friendListContainer') }}>
    <div class="flex-col ownProfil">
        <img class="imgFond" src="{{ asset('images/fondProfil.webp') }}" alt="">

        {# USERNAME AND IMAGE PDP #}
        <div class="flex-row" id="usernameAndImg">
            {% if app.user.image %}
                {% include 'component/imageFilter.html.twig' with  {
                    'route_name':'',
                    'imgClass':'',
                    'image': app.user.image,
                    'param':null,
                    'filter': 'ma_vignette',
                    'aClass':'imageProfil'} %}
            {% else %}

                <img class="imageProfil"
                     src="{{ asset('images/imgProfil.png') | imagine_filter('ma_vignette') }}"
                     alt="">

            {% endif %}

            <span class="username"> {{ app.user.username }}</span>
        </div>

        <div class="flex-col body">
            {# DESCRIPTION #}
            <div class="flex-row">
                <div class="text-container text-container-cs">
                    <span class="text-content description text-content-br" {{ stimulus_target('text','description') }}>{{ app.user.description }}</span>
                    <span class="blur-overlay" {{ stimulus_target('text',' blur') }}></span>
                </div>
            </div>


            {# STATS WITH FOLLOWERS NB AND LIKE NB WITH SETTING #}
