                <div class="flex-row">
                    <div class="flex-row profilStat">
                        {{ app.user.followers|length}}
                        <span>     Followers   </span>
                    </div>
                    <div class="flex-row profilStat">
                        {{ app.user.likes|length }}
                        <span>  likes  </span>
                    </div>
                </div>

